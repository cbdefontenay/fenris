{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "structurizer",
  "version": "0.1.0",
  "identifier": "com.structurizer.app",
  "build": {
    "beforeDevCommand": "dotnet watch run --project ../src/Structurizer.csproj && npx @tailwindcss/cli -i wwwroot/css/app.css -o wwwroot/css/out.css --watch",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "dotnet publish -c release ../src/Structurizer.csproj -o dist",
    "frontendDist": "../dist/wwwroot"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "structurizer",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
