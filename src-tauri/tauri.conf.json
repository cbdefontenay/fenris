{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "fenris",
  "version": "0.1.0",
  "identifier": "com.fenris.app",
  "build": {
    "beforeDevCommand": "deno task dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "deno task build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Fenris",
        "width": 1500,
        "height": 900
      }
    ],
    "security": {
      "capabilities": ["main-capability"],
      "csp": null
    }
  },
  "plugins": {
    "sql": {
      "preload": ["sqlite:fenris_notes.db"]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
